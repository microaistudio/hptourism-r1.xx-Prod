# Environment Configuration Template
# COPY THIS FILE TO .env AND EDIT

# -------------------- Server Configuration --------------------
PORT=5060
NODE_ENV=development
BASE_URL=https://dev1.osipl.dev

# Session Management
SESSION_SECRET=change-me-to-a-secure-random-string
SESSION_COOKIE_NAME=hptourism-homestay.sid
SESSION_COOKIE_DOMAIN=dev1.osipl.dev
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax
SESSION_IDLE_TIMEOUT_MINUTES=10080
SESSION_STORE=postgres

# -------------------- Database --------------------
DATABASE_URL=postgresql://user:password@localhost:5432/homestay_db
DB_MAX_CONNECTIONS=20

# -------------------- Application Storage --------------------
USE_MEM_STORAGE=false

# -------------------- Object Storage --------------------
OBJECT_STORAGE_MODE=local
LOCAL_OBJECT_DIR=./local-object-storage
LOCAL_MAX_UPLOAD_BYTES=20971520

# -------------------- Frontend --------------------
FRONTEND_BASE_URL=https://dev1.osipl.dev

# -------------------- HimKosh Gateway --------------------
HIMKOSH_PAYMENT_URL=https://himkosh.hp.nic.in/echallan/WebPages/wrfApplicationRequest.aspx
HIMKOSH_VERIFICATION_URL=https://himkosh.hp.nic.in/eChallan/webpages/AppVerification.aspx
HIMKOSH_CHALLAN_PRINT_URL=https://himkosh.hp.nic.in/eChallan/challan_reports/reportViewer.aspx
HIMKOSH_SEARCH_URL=https://himkosh.hp.nic.in/eChallan/SearchChallan.aspx

HIMKOSH_MERCHANT_CODE=HIMKOSH230
HIMKOSH_DEPT_ID=230
HIMKOSH_SERVICE_CODE=TSM
HIMKOSH_DDO_CODE=CTO00-068
HIMKOSH_HEAD=1452-00-800-01

HIMKOSH_RETURN_URL=https://dev1.osipl.dev/api/himkosh/callback
CAPTCHA_ENABLED=false
CAPTCHA_PROVIDER=none
HIMKOSH_KEY_FILE_PATH=server/himkosh/echallan.key
HIMKOSH_ALLOW_DEV_FALLBACK=true
HIMKOSH_TEST_MODE=true

# -------------------- Security --------------------
SECURITY_ENABLE_RATE_LIMIT=true
SECURITY_ENABLE_CSRF=true

# -------------------- Logging --------------------
LOG_LEVEL=info
LOG_PRETTY=true

# -------------------- ClamAV --------------------
CLAMAV_ENABLED=false

# -------------------- HPSSO Configuration --------------------
HPSSO_ENABLED=true
HPSSO_ENVIRONMENT=production
HPSSO_PROD_URL=https://himaccess.hp.gov.in
HPSSO_SERVICE_ID=YOUR_SERVICE_ID
HPSSO_SECRET_KEY=YOUR_SECRET_KEY
HPSSO_STAFF_SERVICE_ID=
HPSSO_STAFF_SECRET_KEY=

# -------------------- CCAvenue Gateway --------------------
CCAVENUE_MERCHANT_ID=
CCAVENUE_ACCESS_CODE=
CCAVENUE_WORKING_KEY=
CCAVENUE_ENV=test
CCAVENUE_URL=https://test.ccavenue.com/transaction/transaction.do?command=initiateTransaction
